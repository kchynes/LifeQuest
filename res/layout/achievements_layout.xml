<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAchievements"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llAchievementData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal|center_vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/llAchievementInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvAchievementName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lbl_margin"
                android:text="TextView"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/med" />

            <TextView
                android:id="@+id/tvAchievementDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="sans-serif-thin"
                android:textSize="@dimen/small" />

            <ProgressBar
                android:id="@+id/pbAchievementProg"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/lbl_margin"
                android:minHeight="25dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMedal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8"
            android:src="@drawable/ic_medal_default" />

    </LinearLayout>

</LinearLayout>


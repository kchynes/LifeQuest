<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:isScrollContainer="false"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1.15"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCreateQuestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/create_task_name"
            android:textColor="@color/blue"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/tvCreateTaskSpacer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacer"
            android:background="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivCreateTaskImage"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/image_background"
                android:scaleType="fitXY"
                android:src="@drawable/ic_life_quest" />

            <TextView
                android:id="@+id/tvAddImgNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/img_notification"
                android:textColor="@color/blue"
                android:textSize="@dimen/tiny" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/lbl_margin"
            android:layout_marginRight="@dimen/lbl_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tvTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lbl_margin"
                    android:layout_weight="1.8"
                    android:fontFamily="sans-serif-light"
                    android:gravity="right"
                    android:text="@string/task_name_lbl"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/med" />

                <EditText
                    android:id="@+id/etTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="@dimen/med" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tvCreateLocationLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lbl_margin"
                    android:layout_weight="1.8"
                    android:fontFamily="sans-serif-light"
                    android:gravity="right"
                    android:text="@string/task_location_lbl"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/med" />

                <TextView
                    android:id="@+id/tvTaskLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lbl_margin"
                    android:layout_weight="1.2"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="@dimen/med" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tvCreateDurationLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lbl_margin"
                    android:layout_weight="1.8"
                    android:fontFamily="sans-serif-light"
                    android:gravity="right|center_vertical"
                    android:text="@string/task_duration_lbl"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/med" />

                <Spinner
                    android:id="@+id/spnTaskDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tvCreateExperienceLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lbl_margin"
                    android:layout_weight="1.8"
                    android:fontFamily="sans-serif-light"
                    android:gravity="right"
                    android:text="@string/task_experience_lbl"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/med" />

                <TextView
                    android:id="@+id/tvCalcExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lbl_margin"
                    android:layout_weight="1.2"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/task_calculating"
                    android:textSize="@dimen/med" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center_horizontal|center_vertical"
        android:weightSum="3" >

        <Button
            android:id="@+id/btnCreateCancelTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_weight="0.4"
            android:background="@drawable/buttons_secondary"
            android:fontFamily="sans-serif-light"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/med" />

        <Button
            android:id="@+id/btnCreateFinishTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_weight="0.4"
            android:background="@drawable/buttons_primary"
            android:fontFamily="sans-serif-light"
            android:text="@string/btn_create"
            android:textColor="@color/white"
            android:textSize="@dimen/med" />

    </LinearLayout>

</LinearLayout>